{
  "name": "AI Stealth: Take Home Challenge",
  "version": "1.0",
  "manifest_version": 3,
  "action": {

    "default_title": "Send Disappearing Photo",

    "default_icon": {

      "16": "icons/icon16.png",

      "48": "icons/icon48.png",

      "128": "icons/icon128.png"

    }

  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://web.telegram.org/a*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [],
  "host_permissions": ["*://web.telegram.org/a*"]
}
